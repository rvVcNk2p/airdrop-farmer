{
	"tailwindConfig": "./tailwind.config.js",
	"plugins": ["prettier-plugin-tailwindcss"],
	"singleQuote": true,
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 2,
	"semi": false,
	"printWidth": 80,
	"importOrder": ["^@core/(.*)$", "^@server/(.*)$", "^@ui/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
